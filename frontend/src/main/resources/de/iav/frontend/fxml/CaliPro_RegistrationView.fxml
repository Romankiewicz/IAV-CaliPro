<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import java.lang.String?>
<AnchorPane maxHeight="830.0" maxWidth="1200.0" minHeight="830.0" minWidth="1200.0" prefHeight="830.0"
            prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.iav.frontend.controller.RegistrationViewController">
    <ImageView fitHeight="830.0" fitWidth="1200.0">
        <Image url="@../png/Background.png"/>
    </ImageView>
    <ChoiceBox fx:id="CB_ROLE" layoutX="500.0" layoutY="180.0" prefHeight="30.0" prefWidth="200.0"
               style="-fx-background-color: FFFFFF;" value="Als Prüfstandsfahrer registrieren">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Als Prüfstandsfahrer registrieren"/>
                <String fx:value="Als Messtechniker registrieren"/>
            </FXCollections>
        </items>
        <effect>
            <DropShadow/>
        </effect>
    </ChoiceBox>
    <TextField fx:id="TF_USERNAME" layoutX="500.0" layoutY="220.0" prefHeight="30.0" prefWidth="200.0"
               promptText="Benutzername" style="-fx-background-color: ffffff;">
        <effect>
            <DropShadow/>
        </effect>
    </TextField>
    <TextField fx:id="TF_FIRSTNAME" layoutX="500.0" layoutY="300.0" prefHeight="30.0" prefWidth="200.0"
               promptText="Vorname" style="-fx-background-color: FFFFFF;">
        <effect>
            <DropShadow/>
        </effect>
    </TextField>
    <TextField fx:id="TF_LASTNAME" layoutX="500.0" layoutY="340.0" prefHeight="30.0" prefWidth="200.0"
               promptText="Nachname" style="-fx-background-color: FFFFFF;">
        <effect>
            <DropShadow/>
        </effect>
    </TextField>
    <TextField fx:id="TF_EMAIL" layoutX="500.0" layoutY="380.0" prefHeight="30.0" prefWidth="200.0"
               promptText="Emailadresse" style="-fx-background-color: FFFFFF;">
        <effect>
            <DropShadow/>
        </effect>
    </TextField>
    <Button layoutX="950.0" layoutY="760.0" mnemonicParsing="false" prefHeight="30.0"
            prefWidth="150.0" style="-fx-background-color: BAB9B9;" text="Registrieren"
            onAction="#onClick_PB_REGISTER_SwitchToNextView">
        <effect>
            <DropShadow/>
        </effect>
    </Button>

    <PasswordField fx:id="PF_PASSWORD" layoutX="500.0" layoutY="260.0" prefHeight="30.0" prefWidth="200.0"
                   promptText="Passwort" style="-fx-background-color: FFFFFF;">
        <effect>
            <DropShadow/>
        </effect>
    </PasswordField>
    <Label fx:id="LF_ERROR" layoutX="500.0" layoutY="420.0" prefHeight="30.0" prefWidth="200.0" textFill="#ff4800"/>
    <ImageView layoutX="1060.0" scaleX="0.25" scaleY="0.25">
        <Image url="@../png/HomeButton.png"/>
    </ImageView>
    <Button layoutX="1115.0" layoutY="57.0" mnemonicParsing="false"
            prefHeight="40.0" prefWidth="40.0" style="
          -fx-background-color: #ffffff00;" textFill="#ffffff00"
            onAction="#onClick_PB_HOME"/>
</AnchorPane>
