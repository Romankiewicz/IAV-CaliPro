<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="830.0"
            prefWidth="1200.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.iav.frontend.controller.MetrologyDetailViewController">

    <ImageView fitHeight="830.0" fitWidth="1200.0">
        <Image url="@../png/Background.png"/>
    </ImageView>
    <ImageView layoutX="1060.0" scaleX="0.25" scaleY="0.25">
        <Image url="@../png/HomeButton.png"/>
    </ImageView>
    <ImageView fitHeight="110.0" fitWidth="110.0" layoutX="1025.0" layoutY="25.0" scaleX="0.25" scaleY="0.25">
        <Image url="@../png/CloseButton.png"/>
    </ImageView>
    <Button fx:id="PB_HOME" layoutX="1115.0" layoutY="57.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0"
            style="             -fx-background-color: #ffffff00;" textFill="#ffffff00"/>
    <Button fx:id="PB_CLOSE" layoutX="1058.0" layoutY="57.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0"
            style="            -fx-background-color: #ffffff00;" textFill="#ffffff00"/>
    <ChoiceBox fx:id="CB_METROLOGY" layoutX="200.0" layoutY="180.0" prefHeight="25.0" prefWidth="200.0"
               style="-fx-background-color: BAB9B9;">
        <effect>
            <DropShadow/>
        </effect>
    </ChoiceBox>
    <DatePicker fx:id="DP_DATE" layoutX="680.0" layoutY="180.0" prefHeight="25.0" prefWidth="200.0"
                style="-fx-background-color: BAB9B9; -fx-background-insets: BAB9B9;">
        <effect>
            <DropShadow/>
        </effect>
    </DatePicker>
    <TableView fx:id="TV_METROLOGY" layoutX="142.0" layoutY="387.0" prefHeight="200.0" prefWidth="600.0"
               style="-fx-background-radius: 20; -fx-background-color: #FE2EF710;">
        <columns>
            <TableColumn fx:id="TC_M_ID" prefWidth="75.0"
                         style="-fx-background-radius: 20;                     -fx-background-color: #FE2EF750;"
                         text="ID">
                <cellValueFactory>
                    <PropertyValueFactory property="metrologyId"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="TC_M_INVENTORY" prefWidth="75.0"
                         style="-fx-background-radius: 20;                       -fx-background-color: #FE2EF750;"
                         text="Inventar Nr.">
                <cellValueFactory>
                    <PropertyValueFactory property="inventoryId"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="TC_M_MANUFACTURER" prefWidth="75.0"
                         style="-fx-background-radius: 20;                       -fx-background-color: #FE2EF750;"
                         text="Hersteller">
                <cellValueFactory>
                    <PropertyValueFactory property="manufacturer"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="TC_M_TYPE" prefWidth="75.0"
                         style="-fx-background-radius: 20;                       -fx-background-color: #FE2EF750;"
                         text="Bezeichnung">
                <cellValueFactory>
                    <PropertyValueFactory property="type"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="TC_M_MAINTENANCE" prefWidth="75.0"
                         style="-fx-background-radius: 20;                       -fx-background-color: #FE2EF750;"
                         text="Wartung am:">
                <cellValueFactory>
                    <PropertyValueFactory property="maintenance"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="TC_M_CALIBRATION" prefWidth="75.0"
                         style="-fx-background-radius: 20;                       -fx-background-color: #FE2EF750;"
                         text="Kalibrierung am:">
                <cellValueFactory>
                    <PropertyValueFactory property="calibration"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</AnchorPane>
